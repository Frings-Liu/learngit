<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    <servlet>
        <servlet-name>GradeComboListServlet</servlet-name>
        <servlet-class>com.lxy.web.GradeComboListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.lxy.web.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GradeListServlet</servlet-name>
        <servlet-class>com.lxy.web.GradeListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GradeDeleteServlet</servlet-name>
        <servlet-class>com.lxy.web.GradeDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentListServlet</servlet-name>
        <servlet-class>com.lxy.web.StudentListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GradeSaveServlet</servlet-name>
        <servlet-class>com.lxy.web.GradeSaveServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentDeleteServlet</servlet-name>
        <servlet-class>com.lxy.web.StudentDeleteServlet</servlet-class>
    </servlet>

    <!-- 页面请求login 会通过loginServletname 找到上面的name 再找到上面的class-->
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GradeListServlet</servlet-name>
        <url-pattern>/GradeList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GradeDeleteServlet</servlet-name>
        <url-pattern>/GradeDelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <!--这里的url-pattern相当于这个servlet的地址-->
        <servlet-name>GradeSaveServlet</servlet-name>
        <url-pattern>/gradeSave</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentListServlet</servlet-name>
        <url-pattern>/studentList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GradeComboListServlet</servlet-name>
        <url-pattern>/gradeComboList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentDeleteServlet</servlet-name>
        <url-pattern>/studentDelete</url-pattern>
    </servlet-mapping>

</web-app>